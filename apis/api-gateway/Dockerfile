FROM docker.io/node:22-alpine

ENV HOST=0.0.0.0
ENV PORT=process.env.PORT

WORKDIR /app

RUN addgroup --system api-gateway && \
    adduser --system -G api-gateway api-gateway

COPY dist/apis/api-gateway ./
RUN chown -R api-gateway:api-gateway .

USER api-gateway

CMD ["node", "main.js"]
