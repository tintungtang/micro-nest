{
    "name": "orders-app",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "app",
    "sourceRoot": "apps/orders-app/src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/angular:webpack-browser",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/orders-app",
                "index": "apps/orders-app/src/index.html",
                "main": "apps/orders-app/src/main.ts",
                "polyfills": ["zone.js"],
                "tsConfig": "apps/orders-app/tsconfig.app.json",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "apps/orders-app/public"
                    }
                ],
                "styles": ["apps/orders-app/src/styles.css"],
                "scripts": [],
                "customWebpackConfig": {
                    "path": "apps/orders-app/webpack.config.ts"
                }
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "2kb",
                            "maximumError": "4kb"
                        }
                    ],
                    "outputHashing": "all",
                    "customWebpackConfig": {
                        "path": "apps/orders-app/webpack.prod.config.ts"
                    }
                },
                "development": {
                    "buildOptimizer": false,
                    "optimization": false,
                    "vendorChunk": true,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "namedChunks": true
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "executor": "@nx/angular:dev-server",
            "options": {
                "port": 4206,
                "publicHost": "http://localhost:4206"
            },
            "configurations": {
                "production": {
                    "buildTarget": "orders-app:build:production"
                },
                "development": {
                    "buildTarget": "orders-app:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "extract-i18n": {
            "executor": "@angular-devkit/build-angular:extract-i18n",
            "options": {
                "buildTarget": "orders-app:build"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/orders-app/jest.config.ts"
            }
        },
        "serve-static": {
            "executor": "@nx/web:file-server",
            "defaultConfiguration": "production",
            "options": {
                "buildTarget": "orders-app:build",
                "port": 4206,
                "watch": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "orders-app:build:development"
                },
                "production": {
                    "buildTarget": "orders-app:build:production"
                }
            }
        }
    }
}
